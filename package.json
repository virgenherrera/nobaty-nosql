{
  "name": "nobaty-nosql",
  "version": "1.0.0",
  "description": "Take advantage of typescript with express js, mongoose, socket.io yarn and built-in tasks to quick creation of rest/webSocket service",
  "main": "./bin/www",
  "engines": {
    "node": "^8.9.0",
    "npm": "^5.5.1"
  },
  "keywords": [
    "node 8",
    "typescript 2.6"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/virgenherrera/nobaty-nosql"
  },
  "bugs": {
    "url": "https://github.com/virgenherrera/nobaty-nosql/issues"
  },
  "license": "MIT",
  "homepage": "https://github.com/virgenherrera/nobaty-nosql#readme",
  "scripts": {
    "start": "npm-run-all -s -l cleanup lint build-ts serve-nodemon",
    "develop": "npm-run-all -s -l -c cleanup lint build-ts serve-development",
    "production": "npm-run-all -s -l cleanup lint build-ts provide-forever-config serve-prod",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "node ./node_modules/tslint/bin/tslint -c tslint.json -p tsconfig.json",
    "cleanup": "npm-run-all -p clean-transpilated clean-logs",
    "clean-logs": "node ./tasks/cleanLogs.js",
    "clean-transpilated": "node ./tasks/cleanTranspilated.js",
    "provision": "npm-run-all -p -l -c provide-env provide-forever-config",
    "provide-env": "node ./tasks/provideEnv.js",
    "provide-forever-config": "node ./tasks/provideForeverJson.js",
    "create-module": "node ./tasks/createModule.js",
    "create-controller": "node ./tasks/createController.js",
    "create-model": "node ./tasks/createMongooseModel.js",
    "create-poco": "node ./tasks/createPoco.js",
    "create-repository": "node ./tasks/createMongooseRepository.js",
    "create-rest-handler": "node ./tasks/createRestHandler.js",
    "serve-development": "npm-run-all -p serve-nodemon-debug watch-ts",
    "serve-nodemon": "./node_modules/.bin/nodemon -w .env -w dist/ -V",
    "serve-nodemon-debug": "./node_modules/.bin/nodemon -w .env -w dist/ -V --inspect",
    "serve-prod": "./node_modules/.bin/forever start forever.json",
    "stop-prod": "./node_modules/.bin/forever stop ./bin/www",
    "nodemon": "./node_modules/.bin/nodemon",
    "forever": "./node_modules/.bin/forever",
    "seed": "npm-run-all -s -l build-ts run-seeders",
    "create-seeder": "node ./tasks/mongooseSeed.js --create",
    "run-seeders": "node ./tasks/mongooseSeed.js --run",
    "undo-seeders": "node ./tasks/mongooseSeed.js --undo"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "del": "^3.0.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "forever": "^0.15.3",
    "jsonwebtoken": "^8.1.0",
    "moment": "^2.19.1",
    "mongoose": "^5.0.0-rc1",
    "morgan": "^1.9.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "pluralize": "^7.0.0",
    "pug": "^2.0.0-rc.4",
    "serve-favicon": "^2.4.5",
    "socket.io": "^2.0.4",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.2",
    "uuid": "^3.1.0",
    "yargs": "^10.0.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/body-parser": "^1.16.7",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.1",
    "@types/debug": "^0.0.30",
    "@types/del": "^3.0.0",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.0.39",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/mongoose": "^4.7.32",
    "@types/morgan": "^1.7.35",
    "@types/node": "^8.0.47",
    "@types/pluralize": "^0.0.28",
    "@types/pug": "^2.0.4",
    "@types/serve-favicon": "^2.2.29",
    "@types/socket.io": "^1.4.31",
    "tslint": "^5.8.0"
  }
}
