{
  "name": "nobaty-nosql",
  "version": "1.0.0",
  "description": "Take advantage of typescript with express js, mongoose, socket.io yarn and built-in tasks to quick creation of rest/webSocket service",
  "main": "./bin/www",
  "engines": {
    "node": ">=8.9.0",
    "npm": ">=5.5.1"
  },
  "keywords": [
    "node 8",
    "typescript 2.6"
  ],
  "contributors": [
    {
      "name": "Hugo Virgen",
      "email": "virgenherrera@gmail.com",
      "url": "https://github.com/virgenherrera/"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/virgenherrera/nobaty-nosql"
  },
  "bugs": {
    "url": "https://github.com/virgenherrera/nobaty-nosql/issues"
  },
  "license": "MIT",
  "homepage": "https://github.com/virgenherrera/nobaty-nosql#readme",
  "scripts": {
    "start": "run-s -l cleanup lint ts:build serve:node",
    "production": "run-s production:start",
    "develop": "run-s -l -c cleanup lint ts:build serve:development",
    "provision": "run-p provide:all",
    "lint": "node ./node_modules/tslint/bin/tslint -c tslint.json -p tsconfig.json",
    "seed": "run-s -l ts:build seed:run",
    "generate": "node ./tasks/createModule.js",
    "cleanup": "run-p clean:all",
    "nodemon": "./node_modules/.bin/nodemon",
    "forever": "./node_modules/.bin/forever",
    "production:start": "run-s -l cleanup lint ts:build provide:forever-config serve:forever",
    "production:restart": "run-s serve:forever:stop production:start",
    "production:stop": "run-s -l serve:forever:stop cleanup",
    "serve:node": "node ./bin/www",
    "serve:development": "run-p ts:build-watch serve:nodemon",
    "serve:nodemon": "./node_modules/.bin/nodemon -w .env -w dist/ --inspect",
    "serve:forever": "./node_modules/.bin/forever start forever.json",
    "serve:forever:stop": "./node_modules/.bin/forever stop ./bin/www",
    "provide:all": "run-p -l -c provide:env provide:forever-config",
    "provide:env": "node ./tasks/provideEnv.js",
    "provide:forever-config": "node ./tasks/provideForeverJson.js",
    "seed:generate": "node ./tasks/mongooseSeed.js --create",
    "seed:run": "node ./tasks/mongooseSeed.js --run",
    "seed:undo": "node ./tasks/mongooseSeed.js --undo",
    "clean:all": "run-p clean:dist clean:logs",
    "clean:logs": "node ./tasks/cleanLogs.js",
    "clean:dist": "node ./tasks/cleanDist.js",
    "ts:build": "./node_modules/.bin/tsc",
    "ts:build-watch": "./node_modules/.bin/tsc -w",
    "postinstall": "run-s provision"
  },
  "dependencies": {
    "apn": "^2.2.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "cron": "^1.3.0",
    "debug": "^3.1.0",
    "del": "^3.0.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "firebase-admin": "^5.12.1",
    "forever": "^0.15.3",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.1.0",
    "mime": "^2.2.0",
    "moment": "^2.19.1",
    "mongoose": "^5.0.1",
    "morgan": "^1.9.0",
    "multer": "^1.3.0",
    "nodemailer": "^4.4.2",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "pluralize": "^7.0.0",
    "pug": "^2.0.0-rc.4",
    "serve-favicon": "^2.4.5",
    "socket.io": "^2.0.4",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.2",
    "uuid": "^3.2.1",
    "yargs": "^10.0.3"
  },
  "devDependencies": {
    "@types/apn": "^2.1.2",
    "@types/bcryptjs": "^2.4.1",
    "@types/body-parser": "^1.16.7",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.1",
    "@types/cron": "^1.3.0",
    "@types/debug": "^0.0.30",
    "@types/del": "^3.0.0",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.0.39",
    "@types/joi": "^13.3.0",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/mime": "^2.0.0",
    "@types/mongoose": "^4.7.32",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.6",
    "@types/node": "^8.0.47",
    "@types/nodemailer": "^4.3.4",
    "@types/pluralize": "^0.0.28",
    "@types/pug": "^2.0.4",
    "@types/serve-favicon": "^2.2.29",
    "@types/socket.io": "^1.4.31",
    "@types/uuid": "^3.4.3",
    "tslint": "^5.8.0"
  }
}
